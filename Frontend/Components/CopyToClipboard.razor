@inject IJSRuntime Js

<MudText Class="mb-2" Color="Color.Success" Typo="Typo.subtitle2">
    @_copyMessage
</MudText>

<MudTextField T="string"
              @bind-Value="InputValue"
              Variant="Variant.Text"
              Label="Copy to Clipboard"
              Adornment="Adornment.Start"
              AdornmentIcon="@Icons.Material.Filled.ContentCopy"
              OnAdornmentClick="_copyToClipboard"
              ReadOnly="true" />

@code {
    private string _copyMessage = string.Empty;
    
    [Parameter] 
    public required string InputValue { get; set; }

    private async Task _copyToClipboard()
    {
        await Js.InvokeVoidAsync("navigator.clipboard.writeText", InputValue);
        _copyMessage = "Copied!";
        await Task.Delay(2000);
        _copyMessage = "";
        StateHasChanged();
    }
}